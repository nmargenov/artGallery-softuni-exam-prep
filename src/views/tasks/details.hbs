<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{publication.title}}</h2>
                <h3>Author: {{publication.author.username}}</h3>
                <h3>Painting technique: {{publication.paintingTechnique}}</h3>
                <h3>Certificate of authenticity: {{publication.certificate}}</h3>

                {{#if isLogged}}
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <a href="/posts/{{publication._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/posts/{{publication._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    {{#if hasShared}}
                    <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                    <a href="/posts/{{publication._id}}/share" class="btn-share">Share publication</a>
                    <!-- logged in user who has already shared the publication-->
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}

            </article>

            <article class="details-card-image">
                <img src="{{publication.artPicture}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>